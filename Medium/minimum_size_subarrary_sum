class Solution:
    def minSubArrayLen(self, target: int, nums: List[int]) -> int:
        least_size = float("inf")
        l, total = 0, 0
        curr_size = 0

        for r in range(len(nums)):
            curr_size += 1
            total += nums[r]
            while total >= target:
                if curr_size < least_size:
                    least_size = curr_size
                total -= nums[l]
                l += 1
                curr_size -= 1
        
        return 0 if least_size == float("inf") else least_size
            

                                                          